doctype html
html
  head
    title Voting App
    link(href='/public/css/main.css', rel='stylesheet', type='text/css')
  body
    .header
      .welcome
        if user != null
            p#logstatus Logged in as: #{user.github.username}
        else
            p#logstatus Not logged in
      ul
        li
          a(href='/') Home
        li
          a(href='/yourpolls') Your Polls
        li
          a(href='/newpoll') New Poll
        li
          if user != null
             a#loginlink(href='/logout')
               span#loginout Logout
          else
             a#loginlink(href='/login')
               span#loginout Login
    .main
      form#newPollForm(action='/submitpoll', method='POST')
        label(for='question') Question
        br
        input#fname(type='text', name='question', placeholder='What question would you like to ask?')
        br
        label(for='choice1') Choice 1
        br
        input#choice1id(type='text', name='choice1', placeholder='Choice 1...')
        br
        label(for='choice2') Choice 2
        br
        input#choice2id(type='text', name='choice2', placeholder='Choice 2...')
        br
        #choice3box
          label(for='choice3') Choice 3
          br
          input#choice3id(type='text', name='choice3', placeholder='Choice 3...')
          br
        #choice4box
          label(for='choice4') Choice 4
          br
          input#choice4id(type='text', name='choice4', placeholder='Choice 4...')
          br
        #choice5box
          label(for='choice5') Choice 5
          br
          input#choice5id(type='text', name='choice5', placeholder='Choice 5...')
          br
        #choice6box
          label(for='choice6') Choice 6
          br
          input#choice6id(type='text', name='choice6', placeholder='Choice 6...')
          br
        #choice7box
          label(for='choice7') Choice 7
          br
          input#choice7id(type='text', name='choice7', placeholder='Choice 7...')
          br
        button#addChoice(type='button') Add Choice
        input#sbt(type='submit', value='Submit')

    script(type='text/javascript', src='controllers/newPollChoiceCount.client.js')